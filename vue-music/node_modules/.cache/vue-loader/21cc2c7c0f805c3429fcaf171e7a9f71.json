\r\n          <p \r\n            v-for=\"(item,index) in lyric\" \r\n            :key=\"index\" ref=\"line\"\r\n            :class=\"lineNo-1 == index ? 'is-linehigh' : ''\"\r\n          >\r\n            {{ item.lyric }}\r\n          </p>\r\n        </div>\r\n      </scroll>\r\n    </div>\r\n  </transition>\r\n</template>\r\n\r\n<script>\r\nimport {mapState} from 'vuex'\r\nlet Scroll = () => import('../../../api/scroll');\r\nexport default {\r\n  props: {\r\n    show: {\r\n      type: Boolean,\r\n    },\r\n    time: {\r\n      type: Number,\r\n      required: true,\r\n    }\r\n  },\r\n  data(){\r\n    return{\r\n      lyric: [],\r\n      lineNo: 0, // 当前行\r\n      propLine: null, // 上一行\r\n      C_pos: 6, // C位\r\n      offset: -34, // 滚动距离\r\n      len: 0,\r\n    }\r\n  },\r\n  computed:{\r\n    ...mapState(['songId','audio']),\r\n  },\r\n  watch: {\r\n    show(val){\r\n      if(val){\r\n        this.$nextTick( () =>{\r\n          this.$refs.lyricList.refresh();\r\n        })\r\n      }\r\n    },\r\n    time(){\r\n      if( this.lineNo == this.len) return;\r\n      if(this.len == 1 || !this.len) return;\r\n      if(parseFloat(this.lyric[this.lineNo].time) <= this.time){\r\n        this.lineHigh(); //高亮当前行\r\n        this.propLine = this.lineNo;\r\n        this.lineNo++;\r\n      }\r\n    }\r\n  },\r\n  components: {\r\n    Scroll,\r\n  },\r\n  mounted(){\r\n    this.init();\r\n  },\r\n  methods: {\r\n    init(){\r\n      this.getLyric();\r\n    },\r\n\r\n    async getLyric(){\r\n      await this.$api.Lyric(this.songId)\r\n        .then(res => {\r\n          this.lyric = this.utils.Lyric(res.data.lrc.lyric)\r\n          if(!this.lyric.length){\r\n            let arr = [];\r\n            arr.lyric = '暂无歌词，敬请见谅';\r\n            this.lyric.push(arr);\r\n          }\r\n        })\r\n        this.len = this.lyric.length;\r\n        console.log(this.lyric)\r\n    },\r\n\r\n    // 高亮当前歌词\r\n    lineHigh() {\r\n      if(this.lyric.length == 1) return ;\r\n      let ul = this.$refs.lyricWrap;\r\n      //文字滚动\r\n      if(this.lineNo > this.C_pos){\r\n        ul.style.transform = \"translateY(\" + (this.lineNo - this.C_pos) * this.offset + \"px)\"; //整体向上滚动一行高度\r\n      }\r\n      else if(this.lineNo < this.C_pos){\r\n        ul.style.transform = \"translateY(0)\"; //回到开头\r\n      }\r\n    },\r\n\r\n    // 获取当前播放时长\r\n    getCurrentTime(){\r\n      this.audio.addEventListener('timeupdate', () => {\r\n        console.log(1)\r\n      })\r\n    }\r\n  }\r\n}\r\n</script>\r\n\r\n<style lang=\"scss\" scoped>\r\n  .lyric-box{\r\n    position: absolute;\r\n    right: 0;\r\n    bottom: 80px;\r\n    padding: 44px 30px;\r\n    width: 360px;\r\n    height: 500px;\r\n    border-radius: 3px;\r\n    background: #fff;\r\n    box-sizing: border-box; \r\n    user-select: none;\r\n    z-index: 999;\r\n    .lyric{\r\n      height: 100%;\r\n      overflow: hidden;\r\n      transition-duration: 1s;\r\n      .wrapper{\r\n        font-size: 12px;\r\n        transition-duration: 600ms;\r\n        p{\r\n          padding: 5px 0;\r\n          line-height: 24px;\r\n          font-size: 14px;\r\n          font-weight: 300;\r\n          text-align: center;\r\n          &.is-linehigh{\r\n            color: $mainColor;\r\n          }\r\n        }\r\n      }\r\n    }\r\n  }\r\n</style>"]}]}